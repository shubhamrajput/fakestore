<!DOCTYPE html>
<html lang="en">
  <%- include('head')  %>
  <body>
    <%- include('navbar')  %>
    <div class="jumbotron" style="margin-top:100px;">
      <div class="container">
        <div class="row">
          <% products.forEach(function(item){%>
          <div class="col-sm">
            
            <div class="card" style="width: 20rem;">
              <img class="card-img-top" src="" alt="food image" style="height:10rem;">
              <div class="card-body">
                <h5 class="card-title"><%= item.name%></h5>
                <h6><%=item.price[0].amount+item.price[0].currency%></h6>
                <p class="card-text"><%= item.description %></p>
                <a href="/cart?id=<%= item.id %>" class="btn btn-primary">Add to Cart</a>
              </div>
            </div>
            
          </div>
          <% }); %>
        </div>
      </div>
    </div>
    
  </body>
</html>